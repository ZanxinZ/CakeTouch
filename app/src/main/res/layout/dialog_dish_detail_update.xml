<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/update_dish"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            />

        <!--img-->
        <ImageView
            android:id="@+id/imageViewDishUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />

        <!--name-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView24"
                android:layout_height="wrap_content"
                android:text="@string/dish_name"
                style="@style/dish_detail_list"
                />

            <EditText
                android:id="@+id/textView_dish_name_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"
                android:layout_margin="20dp"/>

        </LinearLayout>

        <!--price-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView25"
                android:layout_height="wrap_content"
                android:text="@string/dish_price"
                style="@style/dish_detail_list"
                />

            <EditText
                android:id="@+id/textView_dish_price_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"
                android:inputType="number"
                android:layout_margin="20dp"/>

        </LinearLayout>

        <!--low price-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView26"
                android:layout_height="wrap_content"
                android:text="@string/dish_low_price"
                style="@style/dish_detail_list"
                />

            <EditText
                android:id="@+id/textView_dish_low_price_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"
                android:inputType="number"
                android:layout_margin="20dp"/>

        </LinearLayout>

        <!--unit-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView27"
                android:layout_height="wrap_content"
                android:text="@string/dish_unit"
                style="@style/dish_detail_list"
                />
            <Spinner
                android:id="@+id/spinnerDishUnitUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:entries="@array/dishUnitArray"/>


        </LinearLayout>

        <!--type-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView28"
                android:layout_height="wrap_content"
                android:text="@string/dish_type"
                style="@style/dish_detail_list"
                />
            <Spinner
                android:id="@+id/spinnerDishTypeUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:entries="@array/dishTypeArray"/>


        </LinearLayout>

        <!--Button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonChangeDish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/cancel" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonConfirmDishUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm_change"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            />

    </LinearLayout>

</LinearLayout>