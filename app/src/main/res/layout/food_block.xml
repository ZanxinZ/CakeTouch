<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/food_block_background">

        <ImageView
            android:id="@+id/imageViewFoodBlock"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/chip"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textViewFoodBlockName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_gravity="center"
            android:textSize="20sp" />

        <!--tableNo-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            

            <TextView
                android:id="@+id/textViewFoodBlockTableCount"
                style="@style/table_block_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ä»½" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonServeOneFood"
            android:layout_width="55dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:text="@string/serve_food"
            android:background="@drawable/button_background"
            android:layout_gravity="center"/>


    </LinearLayout>

</LinearLayout>