<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#9D6AE4"
                android:endColor="#07ADDF"
                android:angle="90"
                />
            <corners android:radius="20dp" />
        </shape>


    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#D04E95ED"
                android:endColor="#47A5EC"
                android:angle="90" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#D02C5B95"
                android:endColor="#47A5EC"
                android:angle="90" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
</selector>