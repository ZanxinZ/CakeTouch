<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#8F0A47"
                android:endColor="#911919"
                android:angle="90"
                />
            <corners android:radius="10dp" />
        </shape>


    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#D04E95ED"
                android:endColor="#47A5EC"
                android:angle="90" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#D09F403D"
                android:endColor="#C8515F"
                android:angle="270" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>