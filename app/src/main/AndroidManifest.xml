<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.caketouch">

    <application
        android:allowBackup="true"
        android:icon="@drawable/cake"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cake"
        android:supportsRtl="true"
        android:theme="@style/Theme.CakeTouch" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SettingActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="com.example.caketouch.SettingActivity"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".NewDishActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="com.example.caketouch.NewDishActivity"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".DishShowActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="com.example.caketouch.DishShowActivity"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".OrderedShowActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="com.example.caketouch.OrderedShowActivity"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".DrinkCheckActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="com.example.caketouch.StuffServeActivity"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
</manifest>